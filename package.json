{
  "name": "ionic-app-base",
  "author": "Ionic",
  "homepage": "http://ionicframework.com/",
  "license": "MIT",
  "scripts": {
    "clean": "node ./config/build/clean.js",
    "compile-js": "node ./config/build/run-ngc.js",
    "rollup": "node ./config/rollup/rollup.script.js",
    "transpile-rollup": "tsc --out www/build/bundle.es5.js --target es5 --allowJs www/build/bundle.es6.js",
    "rename-bundles": "node ./config/build/rename-bundle.js ./www/build/bundle.es6.js ./www/build/bundle.es5.js ./www/build/bundle.js",
    "minify": "uglifyjs --screw-ie8 --compress --mangle --output ./www/build/bundle.min.js ./www/build/bundle.js",
    "gzip": "gzip -k ./www/build/bundle.min.js",
    "copy-html": "node ./config/build/copy-html.js",
    "build": "npm run clean && npm run compile-js && npm run rollup && npm run transpile-rollup && npm run rename-bundles && npm run minify && npm run gzip && npm run copy-html"
  },
  "dependencies": {
    "ionic-angular": "nightly",
    "ionic-native": "1.3.20",
    "ionicons": "3.0.0"
  },
  "devDependencies": {
    "@angular/compiler-cli": "0.6.0",
    "@angular/platform-server": "2.0.0-rc.6",
    "del": "2.2.2",
    "ionic-ngc-build": "0.0.1",
    "rollup": "0.34.13",
    "rollup-plugin-commonjs": "4.1.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "rxjs-es": "^5.0.0-beta.11",
    "typescript": "2.0.2",
    "vinyl-fs": "2.4.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/driftyco/ionic.git"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  }
}
